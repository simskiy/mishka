extends ../pug/layout.pug

block variables
  - var spriteSvg = 'img/svg/order-sprite.svg';

block meta
  title Главная страница

block header
  +page-header()
    .logo-wrapper
      a.logo(href='index.html')
        +svg-img('logo__img', 'Логотип Mishka', spriteSvg, 'logo-mobile')(width=86, height=35)
      +burger('Показать главное меню', 'nav', 'main-nav--open')(class='main-nav__toggler')
    .nav-wrapper
      nav.main-nav#nav
        ul.main-nav__list
          li.main-nav__item.main-nav__item--catalog
            a.main-nav__link(href='catalog.html')
              span.main-nav__link-text Каталог товаров
          li.main-nav__item.main-nav__item--order
            a.main-nav__link
              span.main-nav__link-text Вязание на заказ
          li.main-nav__item.main-nav__item--search
            a.main-nav__link(href='#')
              span.main-nav__link-text Поиск по сайту
              +svg-bg('main-nav__search-img', spriteSvg, 'search')
          li.main-nav__item.main-nav__item--cart
            a.main-nav__link(href='#')
              span.main-nav__link-text Корзина: пока пуста
              +svg-bg('main-nav__cart-img', spriteSvg, 'cart')
          li.main-nav__item.main-nav__item--hidden.main-nav__item--arrivals
            a.main-nav__link(href='#')
              span.main-nav__link-text Новые поступления
          li.main-nav__item.main-nav__item--hidden.main-nav__item--sale
            a.main-nav__link(href='#')
              span.main-nav__link-text Распродажа
          li.main-nav__item.main-nav__item--hidden.main-nav__item--delivery
            a.main-nav__link(href='#')
              span.main-nav__link-text Бесплатная доставка по России

block content
  main.order
    h1.order__title Вязание на заказ

    .zigzag(aria-hidden='true')

    p.order__text Мы будем рады воплотить в жизнь ваши пожелания! Заполните простую форму заказа и мы свяжемся с вами, чтобы уточнить детали.
    form.order__form.form(action='get')

      fieldset.form__block.form__block--height.form__block--margin-type
        legend.form__title Тип
        ul.form__list(role='none')
          li.form__item.form__item--padding-left
            input.form__input.form__input--hidden#type-interior(type='radio', name='type', value='interior', checked)
            label.form__label.form__label--height.form__label-radio.form__label-radio--top-margin(for='type-interior') Аксессуар для интерьера
          li.form__item.form__item--padding-left
            input.form__input.form__input--hidden#type-toy(type='radio', name='type', value='toy')
            label.form__label.form__label-radio(for='type-toy') Детская игрушка

      fieldset.form__block.form__block--margin-color
        legend.form__title Цвет
        ul.form__list(role='none')
          li.form__item.form__item--padding-left
            input.form__input.form__input--hidden#white(type='checkbox', name='color', value='white', checked)
            label.form__label.form__label-checkbox.form__label-checkbox--top-margin(for='white') Белый
          li.form__item.form__item--padding-left
            input.form__input.form__input--hidden#gray(type='checkbox', name='color', value='gray', checked)
            label.form__label.form__label-checkbox(for='gray') Серый
          li.form__item.form__item--padding-left
            input.form__input.form__input--hidden#tyffany(type='checkbox', name='color', value='tyffany')
            label.form__label.form__label-checkbox(for='tyffany') &#171;Тиффани&#187;
          li.form__item.form__item--padding-left
            input.form__input.form__input--hidden#black(type='checkbox', name='color', value='black')
            label.form__label.form__label-checkbox(for='black') Черный
          li.form__item.form__item--padding-left
            input.form__input.form__input--hidden#pink(type='checkbox', name='color', value='pink')
            label.form__label.form__label-checkbox(for='pink') Розовый
          li.form__item.form__item--padding-left
            input.form__input.form__input--hidden#orange(type='checkbox', name='color', value='orange')
            label.form__label.form__label-checkbox(for='orange') Оранжевый

      fieldset.form__block.form__block--margin-username
        legend.form__title ФИО
        ul.form__list(role='none')
          li.form__item
            label.form__label.form__label-username.form__label-username--top-margin(for='username') Имя
            input.form__input.form__input-username#name(type='text', name='name', required, placeholder='Введите Ваше имя*')
          li.form__item
            label.form__label.form__label-username(for='sirname') Фамилия
            input.form__input.form__input-username#sirname(type='text', name='siname', required, placeholder='Укажите фамилию*')
          li.form__item
            label.form__label.form__label-username(for='patronymic') Отчество
            input.form__input.form__input-username#patronymic(type='text', name='patronymic', placeholder='Отчество, если желаете')

      .form__block.form__block--margin-contacts
        label.form__title(for='phone', aria-label='Телефон') Тел
        input.form__input.form__input-phone#phone(type='number', name='phone', required, placeholder='+7 XXX XX XX*')

      .form__block.form__block--margin-contacts
        label.form__title(for='email', aria-label='Адрес электронной почты') E-mail
        input.form__input.form__input-email#email(type='email', name='email', required, placeholder='Ваш Email')

      .form__block.form__block--margin-options
        label.form__title(for='options', aria-label='Дополнительная информация') Доп
        textarea.form__input.form__input-textarea#options(placeholder='Опишите все Ваши пожелания к заказу')

      span.form__note *Поля обязательны для заполнения

      button.button.form__button(type='submit') Отправить заказ

block footer
  +page-footer()
    a(href='index.html')
      +svg-img('page-footer__logo','Mishka', spriteSvg, 'logo-footer')(width=102, height=34)
    ul.page-footer__list
      li.page-footer__item.page-footer__item--insta Инстаграмм
        a.page-footer__link(href='#')
          +svg-img('', 'Инстаграмм', spriteSvg, 'insta')(width=22, height=21)
      li.page-footer__item.page-footer__item--fb Фейсбук
        a.page-footer__link(href='#')
          +svg-img('', 'Фейсбук', spriteSvg, 'fb')(width=15, height=28)
      li.page-footer__item.page-footer__item--tw Твиттер
        a.page-footer__link(href='#')
          +svg-img('', 'Твиттер', spriteSvg, 'twitter')(width=23, height=20)
    a.page-footer__htmlacademy(href='#') Разработанно
      +svg-img('page-footer__htmlacademy-ico', 'HTML Academy', spriteSvg, 'htmlacademy')(width=27, height=34)
