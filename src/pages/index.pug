extends ../pug/layout.pug

block meta
  title Главная страница

block header
  +page-header()
    .logo-wrapper
      +logo()
        img(width='86', src='img/svg/logo-mobile.svg', alt='Логотип Mishka')
      +burger('Показать главное меню', 'nav', 'main-nav--open')(class='main-nav__toggler')
    .nav-wrapper
      nav.main-nav#nav
        ul.main-nav__list
          li.main-nav__item.main-nav__item--catalog
            a.main-nav__link(href='#') Каталог товаров
          li.main-nav__item.main-nav__item--order
            a.main-nav__link(href='#') Вязание на заказ
          li.main-nav__item.main-nav__item--search
            a.main-nav__link(href='#') Поиск по сайту
          li.main-nav__item.main-nav__item--cart
            a.main-nav__link(href='#') Корзина: пока пуста
          li.main-nav__item.main-nav__item--hidden.main-nav__item--arrivals
            a.main-nav__link(href='#') Новые поступления
          li.main-nav__item.main-nav__item--hidden.main-nav__item--sale
            a.main-nav__link(href='#') Распродажа
          li.main-nav__item.main-nav__item--hidden.main-nav__item--delivery
            a.main-nav__link(href='#') Бесплатная доставка по России
block content
  +page-main()
    h1.unvis Магазин вещей ручной работы
    section.banner
      h2.unvis Ассортимент
      p.banner__title Милые штуки ручной
        span.banner__header--nowrap  работы для дома
      a.banner__item.banner__item--interior(href='#') Предметы<br> интерьера
      a.banner__item.banner__item--toys(href='#') Детские<br> игрушки

    .zigzag

    section.product
      h2.product__title Вязаные корзинки
      span.product__week Товар недели
      p.product__info Экологически чистая пряжа, ручная работа. Доступны в шести расцветках, и трех размерах.
      table.product__table.table
        tbody
          tr.table__row
            td.table__name Цвет:
            td.table__text  &#171;Тиффани&#187;/серый
          tr.table__row
            td.table__name Диаметр:
            td.table__text 25 см
          tr.table__row
            td.table__name Высота:
            td.table__text 15 см
      +picture-img('product__img', 'triple-set', 'Вязанные корзинки')
      span.product__cost Цена: 990 руб.
      button.button.product__button Заказать

    .zigzag-line

    section.feature
      h2.feature__title Коротко о нас:
      ul.feature__list
        li.feature__item.feature__item--eco Экологически чиcтые материалы
        li.feature__item.feature__item--cost Скандинавский стиль по российской цене
        li.feature__item.feature__item--like Увеличивает лайки на фотографиях
        li.feature__item.feature__item--handmade Связано вручную с любовью и умилением
        li.feature__item.feature__item--domestic Поддержка отечественного производителя
        li.feature__item.feature__item--gift Поставляется в подарочной упаковке

    section.comment
      h2.comment__title Отзывы
      p.comment__review Я молодая мама, но всё равно фотографии не набирали и близко такого количества лайков, как у популярных инстамамочек. В отчаянии, я накупила аксессуаров и игрушек в Мишке, и мои фотографии сразу стали более стильными, а также набирают больше лайков!
      .comment__contact
        span.comment__name Анастасия Красильникова <br>
        span.comment__email @misssssiskras
      .comment__arrow-block
        button.button-arrow.comment__arrow-left Предыдущий отзыв
        button.button-arrow.comment__arrow-right Следующий отзыв
      button.button.comment__button
        a.comment__link(href='') Написать

    .zigzag-line.zigzag-line--margin

    section.contact
      h2.contact__title Контакты
      .contact__email
        span.contact__email-title e-mail:
        span.contact__email-text info@mimimishkashop.ru
      .contact__adress
        span.contact__adress-title адрес:
        span.contact__adress-text г. Санкт-Петербург,<br>ул. Большая Конюшенная,<br>д. 19/8. офис 101
      .contact__map
        +picture-img('contact__map-img', 'map', 'Адрес на карте')
      button.button.contact__button
        a(href='#') Напишите нам

block footer
  +page-footer()
    img.page-footer__logo(src='#', alt='Логотип Мишка')
    ul.page-footer__list
      li.page-footer__item.page-footer__item--insta Инстаграмм
      li.page-footer__item.page-footer__item--fb Фейсбук
      li.page-footer__item.page-footer__item--tw Твиттер
    span.page-footer__htmlacademy Разработанно
